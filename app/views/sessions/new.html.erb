<div class="title">
  <h1>Login</h1>
</div>

<div class="item-form">
  <%= form_tag '/login' do %>
      <%= text_field_tag(:email, nil, class: "form-field", placeholder: "Email") %><br>
      <%= password_field_tag(:password, nil, class: "form-field", placeholder: "Password") %><br>
      <%= submit_tag "Login", :class => "nav-btn", :id => "submit-btn" %>
  <% end %>
</div>
<div class="back-form" id="back-signup">
  <%= link_to "Sign Up", new_user_path %>
</div>
